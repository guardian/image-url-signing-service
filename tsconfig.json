{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "module": "esnext",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "paths": {
      "*": ["*", "src/*", "src/types/*", "node_modules/*"]
    }
  },

  "include": ["src/index.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
